# Environment Configuration
NODE_ENV=development

# Server Configuration
API_PORT=4000
SIGNALING_PORT=3002

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/videocall-db
# Alternative: MongoDB Atlas connection string
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/videocall-db

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-here-make-it-long-and-random
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-make-it-different-from-access
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:4000

# Frontend URL (for generating join links)
FRONTEND_URL=http://localhost:3000

# API Server URL (for signaling server to communicate with API server)
API_SERVER_URL=http://localhost:4000

# API Key for server-to-server communication
API_KEY=your-api-key-for-server-to-server-communication

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebRTC Configuration
STUN_SERVER=stun:stun.l.google.com:19302
TURN_SERVER_URL=
TURN_SERVER_USERNAME=
TURN_SERVER_CREDENTIAL=

# Redis Configuration (for scaling signaling server)
REDIS_URL=redis://localhost:6379
# Alternative: Redis Cloud connection string
# REDIS_URL=redis://username:password@host:port

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@videocall.com

# Push Notifications (optional)
FIREBASE_SERVER_KEY=
PUSH_NOTIFICATION_ENABLED=false

# Analytics (optional)
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=

# Monitoring (optional)
SENTRY_DSN=
MONITORING_ENABLED=false

# Build Information (set by CI/CD)
BUILD_NUMBER=
GIT_COMMIT=

# Development Tools
SWAGGER_ENABLED=true
DEBUG_MODE=false

# SFU Configuration
SFU_ENABLED=false
MEDIASOUP_LISTEN_IP=127.0.0.1
MEDIASOUP_ANNOUNCED_IP=127.0.0.1
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=49999

# Recording Configuration
RECORDING_ENABLED=false
RECORDING_STORAGE_PATH=./recordings
RECORDING_MAX_DURATION=7200
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# SSL Configuration (for production)
SSL_KEY_PATH=
SSL_CERT_PATH=
SSL_CA_PATH=

# Performance Configuration
CLUSTER_WORKERS=0
MAX_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict
