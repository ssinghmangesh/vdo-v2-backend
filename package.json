{
  "name": "vdo-v2-backend",
  "version": "1.0.0",
  "description": "Video calling application backend services",
  "main": "dist/api-server/index.js",
  "scripts": {
    "dev:api": "nodemon --exec ts-node src/api-server/index.ts",
    "dev:signaling": "nodemon --exec ts-node src/signaling-server/index.ts",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:signaling\"",
    "build": "tsc",
    "start:api": "node dist/api-server/index.js",
    "start:signaling": "node dist/signaling-server/index.js",
    "start": "concurrently \"npm run start:api\" \"npm run start:signaling\"",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": ["video-calling", "webrtc", "socket.io", "express", "mongodb"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "mongoose": "^8.1.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "dotenv": "^16.4.5",
    "node-cron": "^3.0.3",
    "mediasoup": "^3.14.13"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.8",
    "@types/compression": "^1.7.5",
    "@types/node": "^20.11.19",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.3",
    "concurrently": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
